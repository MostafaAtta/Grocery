<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@color/white_light"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/cart_border_layout_bg">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dp10" />

        <View
            android:id="@+id/sep"
            android:layout_toLeftOf="@+id/imageViewProduct"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp8"
            android:background="@color/DARK_GRAY_TXT_COLOR" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_toLeftOf="@+id/sep"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_color_txt"
                android:textSize="@dimen/text_dp15" />

            <TextView
                android:id="@+id/textViewBrandName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_color_txt"
                android:textSize="@dimen/text_dp15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewProductQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 ساعات"
                    android:textColor="@color/grey_color_txt"
                    android:textSize="@dimen/text_dp13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewMinus"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/minus_symbol" />

                    <TextView
                        android:id="@+id/textViewProductItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageViewPlus"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/plus_symbol" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 L.E"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dp13"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dp13"
                            android:layout_marginLeft="@dimen/dp5"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewSaved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 L.E"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dp13"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/saved"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/dp5"
                            android:textSize="@dimen/text_dp13"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 L.E"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dp13"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tax"
                            android:layout_marginLeft="@dimen/dp5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dp13"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewTotalItems"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 L.E"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_dp13"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tax_charges"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/dp5"
                            android:textSize="@dimen/text_dp13"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

                <thegroceryshop.com.custom.RippleButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.3"
                    android:background="@drawable/light_yellow_edittext_bg"
                    android:gravity="center"
                    android:padding="@dimen/dp5"
                    android:visibility="gone"
                    android:text="@string/add_to_list"
                    android:textColor="@color/dark_red_bg" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>