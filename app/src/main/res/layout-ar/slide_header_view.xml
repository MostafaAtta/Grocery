<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/bold_green"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp12"
            android:visibility="gone"
            android:src="@drawable/icon_user" />

        <TextView
            android:id="@+id/home_txt_name_of_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_marginRight="@dimen/dp40"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:fontFamily="@font/ge_ss_two_medium"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dp20" />
    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_colorsild" />-->

    <LinearLayout
        android:id="@+id/home_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp6"
            android:src="@drawable/icon_home" />

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:fontFamily="@font/ge_ss_two_light"
            android:gravity="center_vertical|right"
            android:text="@string/title_activity_home_drawer"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_dp16" />
    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_colorsild" />-->

    <LinearLayout
        android:id="@+id/my_account_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp6"
            android:src="@drawable/icon_my_account" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:gravity="center_vertical|right"
            android:fontFamily="@font/ge_ss_two_light"
            android:text="@string/my_account"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_dp16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_orders_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_colorsild" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_marginLeft="@dimen/dp10"
                android:padding="@dimen/dp8"
                android:src="@drawable/icon_my_orders" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:gravity="center_vertical|right"
                android:fontFamily="@font/ge_ss_two_light"
                android:text="@string/my_orders"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white_90"
                android:textSize="@dimen/text_dp16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_colorsild" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_marginLeft="@dimen/dp10"
                android:padding="@dimen/dp8"
                android:src="@drawable/icon_wishlist" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:gravity="center_vertical|right"
                android:fontFamily="@font/ge_ss_two_light"
                android:text="@string/my_wishlists"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white_90"
                android:textSize="@dimen/text_dp16" />
        </LinearLayout>
    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/divider_colorsild" />-->

    <LinearLayout
        android:id="@+id/notification_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp11"
            android:src="@drawable/icon_notification" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:gravity="center_vertical"
            android:fontFamily="@font/ge_ss_two_light"
            android:text="@string/notifications"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_dp16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_promotions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp12"
            android:background="@color/side_menu_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/bgg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp55"
                android:layout_height="@dimen/dp55"
                android:layout_marginLeft="@dimen/dp10"
                android:padding="@dimen/dp10"
                android:src="@drawable/img_default" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp55"
                android:layout_marginLeft="@dimen/dp5"
                android:gravity="center_vertical|right"
                android:text="@string/promotions"
                android:fontFamily="@font/ge_ss_two_medium"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/promotionItme_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp12"
        android:background="@color/bold_green" />

    <LinearLayout
        android:id="@+id/categories_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/bgg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp55"
            android:layout_height="@dimen/dp55"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="14dp"
            android:src="@drawable/icon_categories" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55"
            android:layout_marginLeft="@dimen/dp5"
            android:gravity="center_vertical|right"
            android:text="@string/categories"
            android:fontFamily="@font/ge_ss_two_medium"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>