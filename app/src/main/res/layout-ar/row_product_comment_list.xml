<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:background="@drawable/light_grey_btn_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp10">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp10"
            android:singleLine="true"
            android:text="MAYA ALI"
            android:textColor="@color/dark_purple"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewName"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="start">

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/finalRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_borderColor="#efb421"
                app:srb_fillColor="#efb421"
                app:srb_isIndicator="true"
                app:srb_numberOfStars="5"
                app:srb_rating="2"
                app:srb_starBackgroundColor="@color/white"
                app:srb_starBorderWidth="2"
                app:srb_starSize="15dp"
                app:srb_starsSeparation="3dp"
                app:srb_stepSize="1" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:text="jadgkfagfagfh dkjgfkjdfjs jdfj shfhds"
        android:textAllCaps="false"
        android:textColor="@color/grey_color_txt"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="5dp"
        android:gravity="end"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/grey_color_txt"
        android:textSize="12sp" />

</LinearLayout>