<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp8"
        android:background="@color/white"
        android:padding="@dimen/dp5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/order_product_item_img_product"
                    android:layout_width="@dimen/dp90"
                    android:layout_height="@dimen/dp90"
                    android:layout_margin="@dimen/dp5" />

                <View
                    android:id="@+id/sep"
                    android:layout_width="@dimen/dp1"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp3"
                    android:background="@color/colorLightGrey" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/detail"
                android:orientation="vertical"
                android:padding="@dimen/dp5">

                <TextView
                    android:id="@+id/order_product_item_txt_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="1"
                    android:text="Product Name"
                    android:textColor="@color/red_line_color"
                    android:textSize="@dimen/text_dp14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_product_item_txt_brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:minLines="1"
                    android:text="Brand Name"
                    android:textColor="@color/gray_bb"
                    android:textSize="@dimen/text_dp12" />

                <TextView
                    android:id="@+id/order_product_item_txt_product_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:minLines="1"
                    android:text="750 gm"
                    android:textColor="@color/red_line_color"
                    android:textSize="@dimen/text_dp12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/order_product_item_txt_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/price"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/text_dp12" />

                    <TextView
                        android:id="@+id/order_product_item_txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/order_product_item_txt_price1"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="250.00 EGP"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/text_dp12" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/order_product_item_txt_quantity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:maxLines="2"
                        android:minLines="1"

                        android:text="@string/quantity_colon"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/text_dp12" />

                    <TextView
                        android:id="@+id/order_product_item_txt_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/order_product_item_txt_quantity1"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="250.00 EGP"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/text_dp12" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>