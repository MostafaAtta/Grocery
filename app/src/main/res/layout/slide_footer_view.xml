<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bold_green"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp12"
        android:background="@color/bold_green" />

    <LinearLayout
        android:id="@+id/invite_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:padding="@dimen/dp6"
            android:src="@drawable/icon_invite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:gravity="left|center_vertical"
            android:text="@string/invite_friends"
            android:fontFamily="@font/montserrat_light"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_dp16" />
    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_red_bg" />-->

    <LinearLayout
        android:id="@+id/applocation_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:padding="@dimen/dp8"
            android:src="@drawable/icon_tour" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:gravity="left|center_vertical"
            android:text="@string/applicaion_tour"
            android:fontFamily="@font/montserrat_light"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_dp16" />
    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_red_bg" />-->

    <LinearLayout
        android:id="@+id/feedbackView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp45"
            android:padding="@dimen/dp8"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/feedback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="left|center_vertical"
            android:text="@string/feedback"
            android:fontFamily="@font/montserrat_light"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_dp16" />
    </LinearLayout>

</LinearLayout>