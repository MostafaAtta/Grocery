<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/background_oval_off"
            android:layout_width="@dimen/settings_toggle_width"
            android:layout_height="@dimen/settings_toggle_height"
            android:background="@drawable/settings_black_oval" />

        <View
            android:id="@+id/background_oval_on"
            android:layout_width="@dimen/settings_toggle_width"
            android:layout_height="@dimen/settings_toggle_height"
            android:background="@drawable/settings_green_oval"
            android:visibility="gone" />

        <View
            android:id="@+id/toggleCircle"
            android:layout_width="@dimen/settings_toggle_circle_diameter"
            android:layout_height="@dimen/settings_toggle_circle_diameter"
            android:layout_gravity="center_vertical"
            android:background="@drawable/settings_circle" />

    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_toEndOf="@id/layout"
        android:layout_toRightOf="@id/layout"
        android:textColor="@color/white"
        android:textSize="12sp" />
</LinearLayout>