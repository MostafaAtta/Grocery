<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayColorBackground"
    android:orientation="vertical">

    <include
        layout="@layout/common_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayColorBackground">

        <ImageView
            android:id="@+id/mCheckoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp50"
            android:src="@mipmap/screen_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp60"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="@string/how_can_we_help"
                android:textColor="@color/grey_color_txt"
                android:textSize="@dimen/text_dp15"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center"
                android:typeface="sans"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/call_us_daily_from"
                android:textColor="@color/grey_color_txt"
                android:textSize="@dimen/text_dp13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp5"
                android:textDirection="ltr"
                android:background="@drawable/dark_red_layout_bg"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="+20 1021757111"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dp18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center"
                android:typeface="sans"
                android:text="@string/or_email_us1"
                android:textColor="@color/grey_color_txt"
                android:textSize="@dimen/text_dp13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/dark_red_layout_bg"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="support@thegroceryshop.com"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dp18"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>