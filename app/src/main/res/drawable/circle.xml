<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="oval">
            <stroke android:width="@dimen/dp1" android:color="@color/dark_red_bg" />
            <solid android:color="@color/light_yellow_bg" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/dp1" android:color="@color/dark_red_bg" />
            <solid android:color="@color/ultraLightGray_UltraLowlight" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/light_yellow_bg" />
        </shape>
    </item>

</selector>